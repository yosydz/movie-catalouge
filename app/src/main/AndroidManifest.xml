<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gudangide.submission4">

    <uses-permission android:name="com.gudangide.submission4.WRITE_DATABASE" android:protectionLevel="normal" />
    <uses-permission android:name="com.gudangide.submission4.READ_DATABASE" android:protectionLevel="normal" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SettingActivity" />

        <activity android:name=".DetailActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".provider.FavoriteProvider"
            android:authorities="com.gudangide.submission4"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.gudangide.submission4.READ_DATABASE"
            android:writePermission="com.gudangide.submission4.WRITE_DATABASE"/>

        <receiver
            android:name=".reciver.NotifReminderReceiver"
            android:enabled="true"
            android:exported="true"/>

        <receiver android:name=".widget.FavoriteMovieWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/favorite_movie_widget_info" />
        </receiver>

        <service
            android:name=".widget.StackWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
    </application>
</manifest>